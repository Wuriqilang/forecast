<!--pages/add/home/home.wxml-->
<scroll-view scroll-y class="">
    <view class="cu-bar bg-white">
    <view class="action sub-title">
      <text class="text-xl text-bold text-green">添加绩效任务</text>
      <text class="bg-green"></text>
      <!-- last-child选择器-->
    </view>
  </view>
    <form bindsubmit='formBindSubmit'>

      <view class="cu-form-group solid-top">
        <view class="title">截止时间</view>
        <picker name="martisClockDate" mode="date" value="{{date}}" start="2010-09-01" end="2022-09-01" bindchange="DateChange">
          <view class="picker">
            {{date}}
          </view>
        </picker>
      </view>
      <view class="cu-form-group">
        <view class="title">工作内容</view>
        <input style="text-align:right;" name="martisClockContext" placeholder="输入主要工作内容" bindblur='GetUserID'></input>
      </view>
      <view class="cu-form-group">
        <view class="title">考评科室</view>
        <input style="text-align:right;" name="martisClockDep" placeholder="请输入绩效任务考评科室" value='{{userID}}'></input>
      </view>

      <view class="cu-form-group">
        <view class="title">责任人</view>
        <input style="text-align:right;" name="martisClockUser" placeholder="请填入您的姓名" value='{{userID}}'></input>
      </view>

      <view class="cu-form-group">
        <view class="title">具体工作任务</view>
        <input style="text-align:right;" name="martisClockDetail" placeholder="工作详细信息" value='{{userID}}'></input>
      </view>


      <view class="cu-form-group">
        <view class="title">已完成情况</view>
        <input style="text-align:right;" name="martisClockAlready" placeholder="选填" value='{{userName}}'></input>
      </view>

      <view class="cu-form-group">
        <view class="title">尚未完成情况</view>
        <input style="text-align:right;" name="martisClockPadding" placeholder="选填"></input>
      </view>


      <view class="cu-form-group">
        <view class="title">目前进度</view>
        <input style="text-align:right;" name="martisClockProgress" placeholder="请输入0～100的小数" value="0"></input>
      </view>

      <view class="cu-form-group">
        <view class="title">提前提醒</view>
        <input style="text-align:right;" name="martisClockAlert" placeholder="提前提醒天数，不填默认为30" value='30'></input>
      </view>



      <!-- !!!!! placeholder 在ios表现有偏移 建议使用 第一种样式 -->
      <view class="cu-form-group ">
        <textarea name="martisClockRemark" data-placeholder="备注" maxlength="-1" disabled="{{modalName!=null}}" placeholder-class="placeholder" class="{{textareaAValue?'value':''}}" bindinput="textareaAInput"></textarea>
      </view>
      <view class="padding flex flex-direction">
        <button class="cu-btn bg-blue lg" formType="submit">提交</button>
      </view>
    </form>
  <view class="text-black bg-cyan light radius text-md margin-bottom margin-left margin-right padding-top padding-bottom">
    <text class="cuIcon-warn text-red margin-left-lg"></text> 批量添加请登录信息管理平台
  </view>


</scroll-view>